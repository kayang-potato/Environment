{
  "typescript.format.enabled": true,
  "typescript.eslint.format.enable": true,
  "eslint.format.enable": true,
  "python.pythonPath": "/opt/homebrew/anaconda3/bin/python",
  "python.formatting.provider": "yapf",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintUseMinimalCheckers": false,
  "prettier.eslintIntegration": true,
  "clangd.arguments": [
    "--clang-tidy",
    "--background-index",
    "--all-scopes-completion",
    "--completion-style=detailed",
    "--header-insertion=iwyu",
    "-j=4",
    "--query-driver=/Library/Developer/CommandLineTools/usr/bin"
  ],
  "clangd.path": "/Library/Developer/CommandLineTools/usr/bin/clangd",
  "snippets.ultisnips.pythonPrompt": false,
  "snippets.ultisnips.directories": [
      "$HOME/.config/nvim/snippets"
  ],
  "snippets.extends":
  {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  }
}
